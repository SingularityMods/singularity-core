{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-bitwise":  ["error", { "allow": ["|"] }],
        "no-param-reassign": ["error", { "ignorePropertyModificationsFor": ["event.returnValue"] }],
        "no-use-before-define": ["error", { "functions": false }],
        "no-underscore-dangle": "off",
        "react/forbid-prop-types": "off",
        "react/no-danger": "off",
        "react/no-did-update-set-state": "off"
    },
    "globals": {
      "MAIN_WINDOW_PRELOAD_WEBPACK_ENTRY": true,
      "MAIN_WINDOW_WEBPACK_ENTRY": true,
      "SPLASH_WINDOW_PRELOAD_WEBPACK_ENTRY":true,
      "SPLASH_WINDOW_WEBPACK_ENTRY": true
    }
}
